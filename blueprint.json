{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/admin.php?page=sales-dash&jpcrm_skip_wizard=1",
  "phpExtensionBundles": [
    "kitchen-sink"
  ],
  "features": { "networking": true },
  "steps": [
    {
      "step": "installPlugin",
      "pluginZipFile": {
          "resource": "wordpress.org/plugins",
          "slug": "zero-bs-crm"
      },
      "options": {
          "activate": true
      }
    },
    {
      "step": "runPHP",
      "code": "<?php require_once 'wordpress/wp-load.php'; wp_update_option(array('' => true)); ?>"
    }
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/mikestottuk/mikestottme/main/jetpackcrm-ext-sales-dashboard.zip"
      }
    },
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "defineWpConfigConsts",
      "consts": {
          "WP_DEBUG": false,
      }
    },
    {
      "step": "defineWpConfigConsts",
      "consts": {
          "WP_DEBUG_DISPLAY": false,
      }
    },
    {
      "step": "defineWpConfigConsts",
      "consts": {
          "DISALLOW_FILE_EDIT": true
      }
    },
    {
      "step": "runPHP",
      "code": "<?php require '/wordpress/wp-load.php'; $wpdb->query('delete from wp_posts');"
    }
  ]
}